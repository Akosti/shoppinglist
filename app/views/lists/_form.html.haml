= semantic_form_for @list do |f|
  =f.inputs do
    = f.input :title

    %fieldset#items
      %legend Items
      =f.semantic_fields_for :items do |item|
        =render 'item_fields', f: item
      .links
        =link_to_add_association 'add item', f, :items

  =f.actions do
    = f.action :submit, as: :input
